#include<stdio.h>
int main(){
    int n=0;
    scanf("%d",&n);
    int day=n/(60*60*24);
    printf("%d days\n",day);
    int hour=(n-day*60*60*24)/(60*60);
    printf("%d hours\n",hour);
    int min=(n-day*60*60*24-hour*60*60)/60;
    printf("%d minutes\n",min);
    int sec=n-day*60*60*24-hour*60*60-min*60;
    printf("%d seconds\n",sec);
}
